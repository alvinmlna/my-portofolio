---
import Base from "./Base.astro";
import '../../node_modules/github-markdown-css/github-markdown.css';

---

<style>
    .markdown-body {
        color: white;
        padding: 3rem;
        border-radius: 10px;
		box-sizing: border-box;
		min-width: 200px;
		max-width: 980px;
		margin: 0 auto;
		padding: 45px;
	}

	@media (max-width: 767px) {
		.markdown-body {
			padding: 15px;
		}
	}
</style>


<Base> 
    <div class="px-3 md:px-6 lg:px-10 xl:px-40 flex w-full items-center justify-center mt-0 md:mt-32 lg:mt-40 xl:mt-48">
        <section id="about" class="markdown-body  w-full xl:max-w-[1024px]">
            <slot></slot>
        </section>
    </div>
</Base>