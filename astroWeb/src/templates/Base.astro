---
import Body from '../layouts/Body.astro';
import '../styles/actual.css';
import '../styles/main.css';

const {showNavName} = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Alvin Portofolio</title>
	
		<link  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
		<script is:inline src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
		
		<link href="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.0.0/magnific-popup.min.css" rel="stylesheet">
		
		<script is:inline src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
		<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.0.0/jquery.magnific-popup.min.js"></script>

		<script>
			$( document ).ready(function() {
				$(document).ready(function() {
					$('.popup-youtube').magnificPopup({
						disableOn: 700,
						type: 'iframe',
						mainClass: 'mfp-fade',
						removalDelay: 160,
						preloader: false,
	
						fixedContentPos: false
					});
				});
	
			});
			 
		  </script>

		  <style>
			.nav-name {
				color:#FEBC2E !important
			}

			html, body {
				margin:0px;
				height:100%;
			}

		  </style>
	</head>
	<body>
		<div id="root">
			<div class="w-full overflow-hidden">
				
				<div id="target-navbar"></div>

				<div
				   class="px-3 md:px-6 lg:px-10 xl:px-40 flex w-full items-center justify-center top-[0px]  z-10">
				   <nav class="w-full xl:max-w-[1024px] bg-navbar hidden rounded-b-lg nav-padding md:flex">
					
					{showNavName && <div class="text-navbar"><a href="/" > <span class="nav-name">Alvin's</span> Project Collections</a></div>}

					   <ul class="flex w-full items-center justify-between max-w-[560px] flex-1 list-none" 
					   style="margin-left: auto;max-width: 200px;">
						   <li class="text-navbar"><a href="https://www.linkedin.com/in/alvinmaulana14/">Linkedin</a></li>
						   <li class="text-navbar"><a href="#target-work">Resume</a></li>
					   </ul>
				   </nav>
			   </div>

				<slot></slot>

				<div id="target-footer"></div>
				<div
					class="px-3 md:px-6 lg:px-10 xl:px-40 flex w-full items-center justify-center mt-24 md:mt-32 lg:mt-40 xl:mt-48">
					<footer
						class="w-full xl:max-w-[1024px] flex w-full items-center justify-center  bg-purple rounded-t-lg pb-28 md:pb-5"
						style="padding-top: 0.5rem; padding-bottom: 0.5rem;;"
						>
						<span class="text-p2 !text-white"> </span>
					</footer>
				</div>
			</div>
		</div>
	</body>
</html>
