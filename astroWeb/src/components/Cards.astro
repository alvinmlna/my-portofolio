---
const {href = "#"} = Astro.props;
const {hrefTarget = "_self"} = Astro.props;
const {title} = Astro.props;
const {description} = Astro.props;
const {IsdetailVideo = false} = Astro.props;
const {img} = Astro.props;
const {tags} = Astro.props;

let listOfTag : string[] = [];
if (tags) {
  listOfTag = tags.split(",") as string[]
}
---



<div class="card">

    {
      !IsdetailVideo ? 
      <a href={href}  target={hrefTarget}> <img src={img} style="border-radius: 15px 15px 0 0;" class="card-img-top" alt="..."></a>
      :
      <a href={href} class="popup-youtube"  style="font-size: 20px;" target="_blank"> <img src={img} style="border-radius: 15px 15px 0 0;" class="card-img-top" alt="..."></a>
    }
    
    <div class="card-body">

      <p class="card-title">
        {
          !IsdetailVideo ? 
          <a href={href} style="font-size: 20px;" target={hrefTarget}>{title}</a>
          :
          <a href={href} class="popup-youtube" style="font-size: 20px;" target="_blank">{title}</a>
        }
      </p>

      <p class="card-text">{description}<slot/></p>
        
      {
        !IsdetailVideo ? 
        <a href={href}  target={hrefTarget} class="text-button mt-6">More details</a> 
        :
        <a class="popup-youtube text-button mt-6" href={href} >More details</a>
      }
      
    </div>
        <div class="card-footer">
            <div class="project-tags" role="list">
                {listOfTag.map((item) => (
                  <button class="project-tag">
                    <span aria-hidden="true">#</span>
                    {item}
                  </button>
                ))}
              </div>
        </div>
</div>